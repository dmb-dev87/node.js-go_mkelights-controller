    require_once 'db.php';
    $display_text = "";
    
    $sql = "select message from tbl_display where status=1 order by created_date desc limit 1";
    $res = mysql_query($sql);
    if (empty($res)) {
        $display_text =  "";
    }
	if ($row = mysql_fetch_assoc($res)) {
        $display_text =  urldecode($row['message']);
    }
    
    $sql = "select * from tbl_filter order by id";
    $res = mysql_query($sql);
    if (empty($res)) {
        $display_text =  $display_text;
    }
    else
    {
		while ($row = mysql_fetch_assoc($res)) {
	        $pat_str =  $row['pattern_str'];
	        $repl_str =  $row['replace_str'];
	        $display_text = preg_replace($pat_str, $repl_str, $display_text);
	    }
    }    

